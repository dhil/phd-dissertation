#!
#
# Stream redirection
#
sig > : (() -> a, String)
             { Create:(String) -> Option(FileDescr)
             , Exit  : (Int) -> Zero
             , Write :(FileDescr,String) -> ()      }-> a
op f > fname {
  var fd = switch (do Create(fname)) {
             case None -> exit(-1)
             case Some(fd) -> fd
  }; handle(f()) {
      case ans -> ans
      case <Write(_, cs) => resume> ->
       resume(do Write(fd, cs))
    }
}
#?
