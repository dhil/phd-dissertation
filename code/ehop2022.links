sig fileRW : ( () { Read :(FileDescr) -> Option(String)
                  , Write:(FileDescr, String) -> ()    }-> a )
                          {Get:FileSystem,Put:(FileSystem) -> ()}-> a
fun fileRW(m) {
  handle(m()) {
    case ans -> ans
    case <Read(fd) => resume> ->
      var cs = withDefault(None, fun() {
                 Some(fread(fd, get()))
      }); resume(cs)
    case <Write(fd, cs) => resume> ->
      withDefault((), fun() {
        var fsys = fwrite(fd, cs, get());
        put(fsys)
      }); resume(())
  }
}
